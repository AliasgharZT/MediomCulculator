<Style>:
    txt:txt
    MDScreenManager:
        id:mn 
# /////////MAIN///////////
        MDScreen:
            name:'main'
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding:5
                    spacing:3
                    MDLabel:
                        id:txt  
                        text:''
                        size_hint: 1, 0.1
                        halign:'center'
                        md_bg_color: [1,1,1,0.5]
                    MDBoxLayout:
                        orientation: 'horizontal'
                        MDGridLayout:
                            cols:4
                            spacing:3
                            MDRectangleFlatButton:
                                id:btn1
                                text:'1'
                                on_press:txt.text=txt.text+btn1.text
                            MDRectangleFlatButton:
                                id:btn2
                                text:'2'
                                on_press:txt.text=txt.text+btn2.text
                            MDRectangleFlatButton:
                                id:btn3
                                text:'3'
                                on_press:txt.text=txt.text+btn3.text
                            MDRectangleFlatButton:
                                id:btn4
                                text:'4'
                                on_press:txt.text=txt.text+btn4.text
                            MDRectangleFlatButton:
                                id:btn5
                                text:'5'
                                on_press:txt.text=txt.text+btn5.text
                            MDRectangleFlatButton:
                                id:btn6
                                text:'6'
                                on_press:txt.text=txt.text+btn6.text
                            MDRectangleFlatButton:
                                id:btn7
                                text:'7'
                                on_press:txt.text=txt.text+btn7.text
                            MDRectangleFlatButton:
                                id:btn8
                                text:'8'
                                on_press:txt.text=txt.text+btn8.text
                            MDRectangleFlatButton:
                                id:btn9
                                text:'9'
                                on_press:txt.text=txt.text+btn9.text
                            MDRectangleFlatButton:
                                id:btn0
                                text:'0'
                                on_press:txt.text=txt.text+btn0.text
                            MDRectangleFlatButton:
                                text:'.'
                                on_press:root.mom() 
                        MDGridLayout:
                            cols:2
                            spacing:3
                            MDRectangleFlatButton:
                                text:'¶'
                                on_press:root.clear1()
                            MDRectangleFlatButton:
                                text:'c'
                                on_press:txt.text=''
                            MDRectangleFlatButton:
                                text:'x'
                                on_press:root.zar()
                            MDRectangleFlatButton:
                                text:'/'
                                on_press:root.tagh()
                            MDRectangleFlatButton:
                                text:'+'
                                on_press:root.jam()
                            MDRectangleFlatButton:
                                text:'-'
                                on_press:root.kam()
                            MDRectangleFlatButton:
                                text:'='
                                on_press:root.result()
                            MDRectangleFlatButton:
                                text:'√'
                                on_press:root.radic()
            MDScreen:
                MDAnchorLayout:
                    anchor_x:'left'
                    anchor_y:'center'
                    MDGridLayout:
                        cols:2
                        padding:5
                        size_hint: None, None 
                        MDRectangleFlatButton:
                            text:'cos'
                            on_press:root.cos()
                        MDRectangleFlatButton:
                            text:'sin'
                            on_press:root.sin()
                        MDRectangleFlatButton:
                            text:'tan'
                            on_press:root.tan()
                        MDRectangleFlatButton:
                            text:'cot'
                            on_press:root.cot()
                        MDRectangleFlatButton:
                            text:'cosh'
                            on_press:root.cosh()
                        MDRectangleFlatButton:
                            text:'sinh'
                            on_press:root.sinh()
                        MDRectangleFlatButton:
                            text:'tanh'
                            on_press:root.tanh()
                        MDRectangleFlatButton:
                            text:'coth'
                            on_press:root.coth()
    
# ////////FAKE///////////
        MDScreen:
            name:'fake'

